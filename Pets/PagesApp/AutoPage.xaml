<Page x:Class="Pets.PagesApp.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pets.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">

    <Grid>
        <StackPanel Background="#FFDADADA" Width="400" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" Text="Login" Margin="10,10,10,0"/>
            <TextBox x:Name="LoginTB" TextWrapping="Wrap" Width="380" Margin="10,10,10,0"/>
            <TextBlock TextWrapping="Wrap" Text="Password" Margin="10,10,10,0"/>
            <PasswordBox x:Name="PasswordTB" Width="380" Margin="10,10,10,0"/>
            <StackPanel Height="48" Width="150" Margin="10,10,10,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LoginBtn" Width="40" Content="Log in" Margin="10,10,10,0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="LoginBtn_Click"/>
                <Button x:Name="RegistrationBtn" Content="Registration" Width="70" Margin="10,10,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="RegistrationBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
